{
    "name": "bitpay/gravityforms",
    "description": "BitPay payment plugin for gravityforms",
    "type": "gravityforms-plugin",
    "keywords": ["gravityforms","wordpress","plugin","payment","ecommerce","bitcoin","bitpay"],
    "license": "MIT",
    "support": {
        "email": "support@bitpay.com",
        "issues": "https://github.com/bitpay/gravityforms-plugin/issues",
        "source": "https://github.com/bitpay/gravityforms-plugin"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/bitpay/php-bitpay-client.git"
        }
    ],
    "authors": [
        {
            "name": "BitPay Integrations Development Team",
            "email": "integrations@bitpay.com",
            "homepage": "https://bitpay.com/integrations"
        }
    ],
    "require": {
        "bitpay/php-client": "dev-master@dev"
    },
    "require-dev": {
        "wp-cli/wp-cli": "*",
        "behat/behat": "2.4.*@stable",
        "behat/mink": "1.4.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "fabpot/php-cs-fixer": "@stable",
        "phpunit/phpunit": "~3.7"
    },
    "minimum-stability": "stable",
    "config": {
        "bin-dir": "bin/"
    }
}
